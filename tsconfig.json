{
	"compilerOptions": {
		"outDir": "lib",
		"module": "commonjs",
		"target": "es2018",
		"lib": [
			"esnext",
			"dom"
		],
		"baseUrl": "./src",
		"declaration": true,
		"declarationDir": "./lib/esm",
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Node",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"paths": {
			"@brj/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"src",
		"src/**/*",
		"types/**/*"
	],
	"exclude": [
		"node_modules",
		"lib"
	]
}
