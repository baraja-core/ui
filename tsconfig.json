{
	"compilerOptions": {
		"outDir": "lib/esm",
		"module": "esnext",
		"target": "es5",
		"lib": [
			"es6",
			"dom",
			"es2016",
			"es2017"
		],
		"baseUrl": ".",
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Node",
		"strict": true,
		"allowJs": true,
		"paths": {
			"@brj/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"lib"
	]
}
